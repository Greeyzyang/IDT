<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryeex.sdkband.MainActivity">


    <TextView
        android:id="@+id/tv_connect_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFECEDED"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_status">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_unbind"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="解绑" />

            <TextView
                android:id="@+id/tv_device_info"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设备信息" />

            <TextView
                android:id="@+id/tv_device_property"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设备电量" />

            <TextView
                android:id="@+id/tv_device_activity"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="活动数据" />

            <TextView
                android:id="@+id/tv_device_data"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="数据同步" />

            <TextView
                android:id="@+id/tv_find_device"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="查找手环" />

            <TextView
                android:id="@+id/tv_reboot_device"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="重启手环" />

            <TextView
                android:id="@+id/tv_send_notification"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="发送通知" />

            <TextView
                android:id="@+id/tv_app_list"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取应用排序" />

            <TextView
                android:id="@+id/tv_set_app_list"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置应用排序" />

            <TextView
                android:id="@+id/tv_ota"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="固件升级" />

            <TextView
                android:id="@+id/tv_getDoNotDisturb"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取勿扰模式" />

            <TextView
                android:id="@+id/tv_setDoNotDisturb"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置勿扰模式" />

            <TextView
                android:id="@+id/tv_getDeviceRaiseToWake"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取抬腕亮屏" />

            <TextView
                android:id="@+id/tv_setDeviceRaiseToWake"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置抬腕亮屏" />

            <TextView
                android:id="@+id/tv_getHeartRateDetect"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取心率检测" />

            <TextView
                android:id="@+id/tv_setHeartRateDetect"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置心率检测" />

            <TextView
                android:id="@+id/tv_getDeviceBrightness"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取屏幕亮度" />


            <TextView
                android:id="@+id/tv_setDeviceBrightness"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置屏幕亮度" />

            <TextView
                android:id="@+id/tv_getHomeVibrateSetting"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取震动开关" />


            <TextView
                android:id="@+id/tv_setHomeVibrateSetting"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置震动开关" />

            <TextView
                android:id="@+id/tv_setUnlock"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="设置解锁方式" />


            <TextView
                android:id="@+id/tv_getUnlock"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取解锁方式" />

            <TextView
                android:id="@+id/tv_getSurfaceList"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNormal"
                android:gravity="center"
                android:text="获取表盘列表" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBack"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sv_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_status" />
</androidx.constraintlayout.widget.ConstraintLayout>